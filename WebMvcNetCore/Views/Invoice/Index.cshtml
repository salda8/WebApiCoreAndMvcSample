@model IEnumerable<WebMvcNetCore.Models.Invoice>

<div class="book-example panel panel-primary">
    <div class="panel-heading panel-head">Invoice Listing</div>
    <div class="panel-body">
        <a id="createEditBookModal" href="@Url.Action("CreateEditInvoice")" class="btn btn-success">
            <span class="glyphicon glyphicon-plus"></span>Invoice
        </a>

        <table class="table" style="margin: 4px">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Amount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.InvoiceItems.Count)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DueDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Created)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                    <th>
                        Action
                    </th>

                    <th></th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(x => item.Name)
                        </td>
                        <td>            
                            @Html.DisplayFor(x => item.Amount)
                        </td>
                        <td>
                            @Html.DisplayFor(x => item.Status)
                        </td>
                        <td>
                            @Html.DisplayFor(x => item.InvoiceItems.Count)
                        </td>
                        <td>
                            @Html.DisplayFor(x => item.DueDate)
                        </td>
                        <td>
                            @Html.DisplayFor(x => item.Created)
                        </td>
                        <td>
                            @Html.DisplayFor(x => item.Status)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "CreateEditInvoice", new { id = item.Id }, new { @class = "btn btn-success" }) |
                            @Html.ActionLink("Details", "DetailInvoice", new { id = item.Id }, new { @class = "btn btn-primary" }) |
                            @Html.ActionLink("Delete", "DeleteInvoice", new { id = item.Id }, new { @class = "btn btn-danger" })
                            @Html.ActionLink("Pay", "DeleteInvoice", new { id = item.Id }, new { @class = "btn btn-danger" })

                        </td>
                    </tr>
                }
            </table>
    </div>
</div>


